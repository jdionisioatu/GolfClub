@page
@model GolfClub.Pages.Bookings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["ErrorMessage"]
            </div>
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.BookingId" />
            <div class="form-group">
                <label asp-for="Booking.PlayerOneId" class="control-label"></label>
                <select asp-for="Booking.PlayerOneId" class="form-control" asp-items="ViewBag.PlayerOneId"></select>
                <span asp-validation-for="Booking.PlayerOneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.PlayerTwoId" class="control-label"></label>
                <select asp-for="Booking.PlayerTwoId" class="form-control" asp-items="ViewBag.PlayerTwoId"></select>
                <span asp-validation-for="Booking.PlayerTwoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.PlayerThreeId" class="control-label"></label>
                <select asp-for="Booking.PlayerThreeId" class="form-control" asp-items="ViewBag.PlayerThreeId"></select>
                <span asp-validation-for="Booking.PlayerThreeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.PlayerFourId" class="control-label"></label>
                <select asp-for="Booking.PlayerFourId" class="form-control" asp-items="ViewBag.PlayerFourId"></select>
                <span asp-validation-for="Booking.PlayerFourId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.TeeTime" class="control-label"></label>
                <input asp-for="Booking.TeeTime" class="form-control" />
                <span asp-validation-for="Booking.TeeTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
